<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accentDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Main.DayNight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Main.DayNight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Animations Styles -->
    <style name="FadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="SlideLeftAnimation">
        <item name="android:windowEnterAnimation">@anim/swipe_right</item>
        <item name="android:windowExitAnimation">@anim/swipe_right_back</item>
    </style>

    <style name="SlideDownAnimation">
        <item name="android:windowEnterAnimation">@anim/swipe_down</item>
        <item name="android:windowExitAnimation">@anim/swipe_down_back</item>
    </style>

    <!-- Dialog Themes -->
    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <!-- Default Views Themes (Button, TextView etc.) -->
    <style name="DefaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>